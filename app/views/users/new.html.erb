<% if flash[:danger] %>
  <% flash[:danger].each do |error|%>
    <%=error%><br>
  <% end %>
<% end %>
<%= form_for @user, :url => { :action => "create" } do |f| %>
  <p><%= f.label :first_name %>:
  <%= f.text_field :first_name %></p>
  <p><%= f.label :last_name %>:
  <%= f.text_field :last_name %></p>
  <p><%= f.label :email %>:
  <%= f.text_field :email %></p>
  <p><%= f.label :password %>:
  <%= f.password_field :password %></p>
  <p><%= f.label :confirmation %>:
  <%= f.password_field :confirmation %></p>
  <%= submit_tag 'Register' %>
<% end %>
